<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/cardAdvImgage"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/room"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/cardAdvNumPic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:paddingBottom="3dp"
                android:paddingEnd="3dp"
                android:layout_alignBottom="@id/cardAdvImgage"
                android:layout_toStartOf="@+id/ic_photo"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/ic_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_photo_camera_white_24dp"
                android:elevation="10dp"
                android:paddingEnd="10dp"
                android:layout_alignBottom="@id/cardAdvImgage"
                android:layout_alignEnd="@id/cardAdvImgage" />

            <TextView
                android:id="@+id/cardAdvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Habitacion en calle Jumilla, 42"
                android:layout_below="@id/cardAdvImgage"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"/>

            <View
                android:id="@+id/carAdvDivider"
                style="@style/Divider"
                android:layout_below="@+id/cardAdvTitle"/>

            <TextView
                android:id="@+id/cardAdvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="300â‚¬"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_below="@+id/carAdvDivider"
                android:paddingStart="10dp"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/cardAdvPrice">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_person_black_24dp"
                    android:paddingStart="10dp"/>

                <TextView
                    android:id="@+id/cardAdvUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Juan"
                    android:paddingStart="5dp"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimary"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_phone_black_24dp"
                    android:paddingStart="10dp" />

                <TextView
                    android:id="@+id/cardAdvPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="660648789"
                    android:paddingStart="5dp"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimary"/>

            </LinearLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>